<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <Property name="baseDir">logs</Property>
    </Properties>
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{dd.MM.yyyy HH:mm:ss.SSS} %-5level %logger{36} - %msg%n%throwable"/>
        </Console>

        <RollingFile name="RollingFileDebugAppender" fileName="${baseDir}/commonDebug.log"
                     filePattern="${baseDir}/commonDebugArc/$${date:yyyy-MM}/app-%d{yyyy-MM-dd-HH}-%i.log">
<!--            <NoMarkerFilter onMatch="ACCEPT" onMismatch="DENY"/>-->
            <PatternLayout pattern="%d{dd.MM.yyyy HH:mm:ss.SSS} [%t] %p %c %m%n%throwable"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="250 KB"/>
            </Policies>
        </RollingFile>

        <File name="InfoAppender" fileName="${baseDir}/infoMarker.log">
            <MarkerFilter marker="INFO_MARKER"/>
            <PatternLayout pattern="%d{dd.MM.yyyy HH:mm:ss.SSS} %p %c %m%n"/>
        </File>

        <File name="DebugAppender" fileName="${baseDir}/debugMarker.log">
            <MarkerFilter marker="DEBUG_MARKER"/>
            <PatternLayout pattern="%d{dd.MM.yyyy HH:mm:ss.SSS} %p %c %m%n%throwable"/>
        </File>

        <File name="ErrorAppender" fileName="${baseDir}/errorMarker.log">
            <MarkerFilter marker="ERROR_MARKER"/>
            <PatternLayout pattern="%d{dd.MM.yyyy HH:mm:ss.SSS} %p %c %m%n%throwable"/>
        </File>

        <File name="MethodReturnAppender" fileName="${baseDir}/methodLogs.log">
            <PatternLayout pattern="%d{dd.MM.yyyy HH:mm:ss.SSS} %p %m%n"/>
        </File>


    </Appenders>

    <Loggers>
        <logger name="methodReturn" level="info">
            <AppenderRef ref="MethodReturnAppender"/>
        </logger>

        <Root level="debug">
            <AppenderRef ref="InfoAppender"/>
            <AppenderRef ref="DebugAppender"/>
            <AppenderRef ref="ErrorAppender"/>
            <AppenderRef ref="RollingFileDebugAppender"/>
            <AppenderRef ref="ConsoleAppender" level="info"/>
        </Root>
    </Loggers>

</Configuration>